{{> head title="STOCK.RECEIPT.EXIT_SERVICE" }}

<!-- body  -->
<div class="container" style="font-size: 0.9em;">
  <header>
    <!-- headings  -->
    <div class="row">
      {{> enterpriseDetails }}

      <div class="col-xs-5 text-right">
        <h3 style="margin: 0px;" class="text-uppercase">{{translate 'STOCK.RECEIPT.EXIT_SERVICE'}}</h3>
        <h4 style="margin: 0px;"><strong>{{details.service_display_name}}</strong></h4>
        <div>
          {{details.document_reference}} -
          {{translate "REPORT.PRODUCED_ON"}} <time datetime="{{metadata.timestamp}}">{{date metadata.timestamp}}</time>
          {{translate "REPORT.BY"}} {{metadata.user.username}}
        </div>

        {{#if metadata.enterprise.settings.enable_barcodes}}
          <small>{{> barcode value=details.barcode}}</small>
        {{/if}}
      </div>
    </div>

    <!-- client and user details  -->
    <div class="row" style="border: 1px solid #ccc; padding: 5px; margin-top: 20px; margin-bottom: 15px;">
      <div class="col-xs-6">
        <span class="text-capitalize">{{translate 'FORM.LABELS.SERVICE'}}</span>:
        <strong>{{details.service_display_name}}</strong> <br>
      </div>
      <div class="col-xs-6">
        <span class="text-capitalize">{{translate 'STOCK.DEPOT'}}</span>: <strong>{{details.depot_name}}</strong> <br>
        <span class="text-capitalize">{{translate 'FORM.LABELS.DOCUMENT'}}</span>: <strong>{{details.document_reference}}</strong> <br>
        <span class="text-capitalize">{{translate 'FORM.LABELS.DATE'}}</span>: {{date details.date}} <br>
        <span class="text-capitalize">{{translate "TABLE.COLUMNS.CREATED_BY"}}</span>: {{details.user_display_name}}
      </div>
    </div>
  </header>

  {{#if details.description}}
  <blockquote>
    <strong>{{translate 'FORM.LABELS.DESCRIPTION'}}</strong><br>
    {{details.description}}
  </blockquote>
  {{/if}}

  <!-- list of data  -->
  <table class="table table-condensed table-bordered table-report">
    <thead>
      <tr>
        <th>{{translate 'STOCK.CODE'}}</th>
        <th>{{translate 'STOCK.INVENTORY'}}</th>
        <th>{{translate 'STOCK.LOT'}}</th>
        <th>{{translate 'STOCK.EXPIRATION'}}</th>
        <th>{{translate 'STOCK.QUANTITY'}}</th>
      </tr>
    </thead>
    <tbody>
      {{#each rows}}
        <tr>
          <td>{{code}}</td>
          <td>{{text}}</td>
          <td>{{label}}</td>
          <td>{{date expiration_date}}</td>
          <td class="text-right">{{quantity}}</td>
        </tr>
      {{else}}
        {{> emptyTable columns=5}}
      {{/each}}
    </tbody>
    <tfoot>
      <tr style="font-weight: bold;">
        <td colspan="5">{{rows.length}} {{translate 'STOCK.ITEMS'}}</td>
      </tr>
    </tfoot>
  </table>

  <br />

  <footer>
    <div class="row">
      <div class="col-xs-4">
        <h4 class="text-center">{{translate 'REPORT.FOOTER.APPROVED_BY'}}</h4>
        <hr>
      </div>

      <div class="col-xs-4">
        <h4 class="text-center">{{translate 'REPORT.FOOTER.DEPOT_MANAGER'}}</h4>
        <hr>
      </div>

      <div class="col-xs-4">
        <h4 class="text-center">{{translate 'REPORT.FOOTER.RECEIVER'}}</h4>
        <hr>
      </div>
    </div>
  </footer>
  {{#if metadata.enterprise.settings.enable_barcodes}}
    <script>JsBarcode('.barcode').init();</script>
  {{/if}}
</div>
